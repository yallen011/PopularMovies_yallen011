<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_details"
    tools:context="com.example.android.popularmovies.DetailsActivityFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/activity_content_margin"/>

        <TextView
            android:id="@+id/titleTextView"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/posterImageView"
            android:layout_marginBottom="@dimen/activity_content_margin_half"/>

        <TextView
            android:id="@+id/releaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_toRightOf="@id/posterImageView"
            android:layout_marginBottom="@dimen/activity_content_margin_half"/>

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/releaseDateTextView"
            android:layout_toRightOf="@id/posterImageView"
            android:layout_marginBottom="@dimen/activity_content_margin_half"/>

        <TextView
            android:id="@+id/section_divider"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/posterImageView"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/synopsisSectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/synopsis"
            android:layout_below="@id/section_divider"/>

        <TextView
            android:id="@+id/synopsisTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/synopsisSectionHeader"
            android:layout_marginTop="@dimen/activity_content_margin"/>



    </RelativeLayout>
</FrameLayout>
